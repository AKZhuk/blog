

<br>
<div class="card" style="width:40%" align="center">
    <div class="card-block">
        <div class="text-center">
            <h3><i class="fa fa-lock"></i> Авторизация:</h3>
            <hr class="mt-2 mb-2">
        </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="md-form">
    <%= f.label :email %><br />
    <%= f.email_field :email, :id => "form2", :class=>"form-control", autofocus: true %>
  </div>

  <div class="md-form">
    <%= f.label :password %><br />
    <%= f.password_field :пароль, :class => "form-control", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <div class="actions">
    <%= f.submit "Войти", :class =>"btn btn-deep-purple" %>
  </div>
<% end %>
</div>

