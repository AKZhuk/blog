<ol class="breadcrumb">
  <li><a href="#">Главная</a></li>
  <li><a href="#">Урок</a></li>
  <li class="active"><%=@test.name%></li>
</ol>
<div class="col-md-4 col-md-offset-4">
	<div class="row">
  <div class="page-header">
  <h1><%=@test.name%> <small>Новый</small></h1>
  </div>

	<form>
	  <% @test.questions.each do |question|%>
		<br> 	
		<fieldset class="form-group" id=<%=question.id%>>
		<legend><%=question.text%> <span class="label label-default">Новый</span></legend>
		<% question.answers.each do |answer| %>
			<div class="form-check">
	  			<label class="form-check-label"><input type="radio" class="form-check-input" name=<%=question.id%>><%= answer.answer %></label>
			</div>
		<% end %>
		</fieldset>
	<%end%>
	</form>

	<button class="btn btn-success">Подтвердить</button>
	</div>
</div>